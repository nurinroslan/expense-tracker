<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Expenses Tracker ðŸ’²</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Google Font - PT Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5.3 -->
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', media: 'all', 'data-turbo-track': 'reload' %>

    <!-- Updated Font Awesome 6 -->
    <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css' %>

    <!-- Custom Application Styles -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>

    <!-- Chart.js (Updated Version) -->
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js', defer: true %>

    <style>
      body {
        background-color: #f9fafb;
        font-family: 'PT Sans', sans-serif;
      }
      .app-title {
        font-size: 2rem;
        font-weight: bold;
        color: #890440; /* Dark Wine/Maroon */
      }
      .logout-btn {
        position: absolute;
        top: 10px;
        right: 10px;
      }
      .logout-btn .btn {
        background-color: #890440; /* Dark Wine/Maroon */
        color: white;
        border: none;
      }
      .logout-btn .btn:hover {
        background-color: #7b033a; /* Darker shade of Wine */
      }
    </style>
  </head>

  <body>
    <!-- Navbar -->
    <div class="position-relative mb-4">
      <% if user_signed_in? %>
        <div class="logout-btn">
          <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger', data: { turbo: "false" } %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <h1 class="app-title">Expenses Tracker</h1>
      </div>
    </div>

    <div class="container py-4">
      <%= yield %>
    </div>

    <!-- Bootstrap Bundle JS (with Popper) -->
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js', defer: true %>

    <%= javascript_importmap_tags %>

  </body>
</html>
